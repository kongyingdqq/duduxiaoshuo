<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="VipVideoLabelsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/vipvideo_labels_color</item>
        <item name="android:textSize">@dimen/Vipvideo_labels_textsize</item>
    </style>

    <style name="VipVideoTipsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/vipvideo_tips_color</item>
        <item name="android:textSize">@dimen/Vipvideo_tips_textsize</item>
    </style>

    <style name="MeTitleStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/me_title_two_text</item>
        <item name="android:textSize">@dimen/sponsor_title_size</item>
        <item name="android:gravity">center</item>

    </style>
    
    <style name="QrCodeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/qr_code_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/me_title_two_text</item>
        <item name="android:textSize">@dimen/sponsor_alipay_size</item>

    </style>
    <style name="MeTitleTwoStyle">


        <item name="android:layout_marginTop">@dimen/me_title_two_margin_top</item>
        <item name="android:layout_marginRight">@dimen/me_title_two_margin_left_right</item>
        <item name="android:layout_marginLeft">@dimen/me_title_two_margin_left_right</item>
        <item name="android:textColor">@color/me_title_two_text</item>
        <item name="android:lineSpacingExtra">@dimen/me_title_two_line_spacing_extra</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/me_title_two_size</item>

    </style>


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!-- dialog的动画 -->
    <style name="main_menu_animStyle">
        windowEnterAnimation 进入的动画
        代码里面
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    <style name="SettingsDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>

    </style>


</resources>
